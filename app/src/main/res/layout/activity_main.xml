<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/native_opengl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="60dp"
        android:paddingTop="30dp"
        android:paddingEnd="60dp"
        android:paddingBottom="30dp"
        android:text="Native Opengl"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/java_opengl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/java_opengl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="60dp"
        android:paddingTop="30dp"
        android:paddingEnd="60dp"
        android:paddingBottom="30dp"
        android:text="Java Opengl ES"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/gray_to_rgb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/native_opengl" />

    <TextView
        android:id="@+id/gray_to_rgb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="60dp"
        android:paddingTop="30dp"
        android:paddingEnd="60dp"
        android:paddingBottom="30dp"
        android:text="gray to rgb"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/generate_gray_image_file"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/java_opengl" />

    <TextView
        android:id="@+id/generate_gray_image_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="60dp"
        android:paddingTop="30dp"
        android:paddingEnd="60dp"
        android:paddingBottom="30dp"
        android:text="generate gray image file"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gray_to_rgb" />

</androidx.constraintlayout.widget.ConstraintLayout>